<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context="com.traintimes.app.instantdelayrepay.com.traintimes.app.instantdelayrepay.Fragments.My_Routes">


    <TextView
        android:id="@+id/NoROute"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:alpha="0.8"
        android:visibility="gone"
        android:gravity="center"
        android:text="No Route Saved!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <com.rey.material.widget.Button
            android:id="@+id/AddNewRoute"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/button_ripple"
            android:padding="@dimen/_3sdp"
            android:text="Add New Route"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>


</LinearLayout>
